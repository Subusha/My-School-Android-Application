<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:textAlignment="center"
        android:background="@color/orchid">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:text="My courses"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/bodyMyCources"
            android:layout_width="138dp"
            android:layout_height="125dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/java_logo_svgrepo_com"
            />

        <TextView
            android:id="@+id/java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/arbutus"
            android:text="JAVA"
            android:textSize="32dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border">


        <ImageView
            android:id="@+id/BodySubbmissions"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/python_svgrepo_com"
             />

        <TextView
            android:id="@+id/python"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:fontFamily="@font/arbutus"
            android:text="PYTHON"
            android:layout_marginLeft="5dp"
            android:textSize="32dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/border">


        <ImageView
            android:id="@+id/BodyTimetables"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/dotnet_svgrepo_com"
            />

        <TextView
            android:id="@+id/net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:fontFamily="@font/arbutus"
            android:text=".NET"
            android:layout_marginLeft="5dp"
            android:textSize="32dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="33dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <ImageView
            android:id="@+id/FooterHome"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_home_24"/>



        <ImageView
            android:id="@+id/FooterDashboard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_dashboard_24"/>

        <ImageView
            android:id="@+id/FooterSchool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_school_24"/>


    </LinearLayout>




</LinearLayout>